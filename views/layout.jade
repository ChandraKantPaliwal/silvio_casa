  //
     END HEAD 
  //
     BEGIN BODY 
  body.page-header-fixed
    //
       BEGIN HEADER 
    .header.navbar.navbar-fixed-top
      //
         BEGIN TOP NAVIGATION BAR 
      .header-inner
        //
           BEGIN LOGO 
        a.navbar-brand(href='/users/',style="color:#fff;width:50%")
          //img.img-responsive(src='/assets/img/logo.png', alt='logo')
          | &nbsp;SILVIO CASA
        //
           END LOGO 
        //
           BEGIN RESPONSIVE MENU TOGGLER 
        a.navbar-toggle(href='javascript:;', data-toggle='collapse', data-target='.navbar-collapse')
          img(src='/assets/img/menu-toggler.png', alt='')
        //
           END RESPONSIVE MENU TOGGLER 
        //
           BEGIN TOP NAVIGATION MENU 
        ul.nav.navbar-nav.pull-right
          //
             BEGIN NOTIFICATION DROPDOWN 
          //
             BEGIN USER LOGIN DROPDOWN 
          li.dropdown.user
            a.dropdown-toggle(href='#', data-toggle='dropdown', data-hover='dropdown', data-close-others='true')
              img(alt='', src='/assets/img/avatar.png' style='height: 25px;width: 25px;')
              span.username
                | &nbsp;#{username}
              i.fa.fa-angle-down
            ul.dropdown-menu
              li
                a(href='/users/profile')
                  i.fa.fa-user
                  | My Profile
              li
                a(href='/logout')
                  i.fa.fa-key
                  | Log Out
          //
             END USER LOGIN DROPDOWN 
        //
           END TOP NAVIGATION MENU 
      //
         END TOP NAVIGATION BAR 
    //
       END HEADER 
    .clearfix
    //
       BEGIN CONTAINER 
    .page-container
      //
         BEGIN SIDEBAR 
      .page-sidebar-wrapper
        .page-sidebar.navbar-collapse.collapse
          //
             BEGIN SIDEBAR MENU 
          ul.page-sidebar-menu(data-auto-scroll='true', data-slide-speed='200')
            li.sidebar-toggler-wrapper
              //
                 BEGIN SIDEBAR TOGGLER BUTTON 
              .sidebar-toggler.hidden-phone
              //
                 BEGIN SIDEBAR TOGGLER BUTTON 
            li.sidebar-search-wrapper
              br
            li(class=dashboard+' start')
              a(href='/')
                i.fa.fa-home
                - if(dashboard)
                span.selected
                span.title
                  | Dashboard
            - if(priv == 1)
              li(class=item_active)
                a(href='javascript:;')
                  i.fa.fa-bars
                  - if(item_active)
                  span.selected
                  span.title
                    | Items
                  span.arrow
                ul.sub-menu
                  li(class=sub_sidebar1)
                    a(href='/item/New')
                      | Add New
                  li(class=sub_sidebar2)
                    a(href='/item')
                      | Manage
            - else
              // li(class='disabled')
              li(class=items)
                  a(href='javascript:;')
                    i.fa.fa-bars
                    span.title
                      | Items
            - if(priv == 1)
              li(class=silverprice)
                a(href=(priv == 1)?'/silverPrice':'javascript:;')
                  i.fa.fa-bars
                  - if(silverprice)
                  span.selected
                  span.title
                    | Silver Price
            - else
              li(class='silverprice')
                  a(href='/silverPrice')
                    i.fa.fa-bars
                    - if(silverprice)
                    span.selected
                    span.title
                      | Sliver Price
            li(class=(priv == 1 || priv ==0 )?bill:'disabled')
              a(href=(priv == 1 || priv == 0 )?'/bill':'javascript:;')
                i.fa.fa-legal
                - if(bill)
                span.selected
                span.title
                  | Billing 
                  // Extra for multiple priv test (multiple roles)
            li(class=(priv == 1 || priv ==0 )?invoice:'disabled')
              a(href=(priv == 1 || priv == 0 )?'/invoice':'javascript:;')
                i.fa.fa-legal
                - if(invoice)
                span.selected
                span.title
                  | View Invoice 
            li(class=(priv == 1 || priv ==0 )?report:'disabled')
              a(href=(priv == 1 || priv == 0 )?'/reports':'javascript:;')
                i.fa.fa-legal
                - if(report)
                span.selected
                span.title
                  | Reports 

            li(class=(priv == 1 || priv ==0 )?inventory:'disabled')
              a(href=(priv == 1 || priv == 0 )?'/inventory':'javascript:;')
                i.fa.fa-legal
                - if(inventory)
                span.selected
                span.title
                  | Inventory
          //
             END SIDEBAR MENU 
      //
         END SIDEBAR 
      //
         BEGIN CONTENT 
      .page-content-wrapper
        .page-content
          //
             BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM
          #portlet-config.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
            .modal-dialog
              .modal-content
                .modal-header
                  button.close(type='button', data-dismiss='modal', aria-hidden='true')
                  h4.modal-title Modal title
                  | Widget settings form goes here
                .modal-footer
                  button.btn.blue(type='button') Save changes
                  button.btn.default(type='button', data-dismiss='modal') Close
              //
                 /.modal-content 
            //
               /.modal-dialog 
          //
             /.modal 
          //
             END SAMPLE PORTLET CONFIGURATION MODAL FORM
          //
             BEGIN PAGE HEADER
          .row
            .col-md-6
              //
                 BEGIN PAGE TITLE & BREADCRUMB
              h3.page-title
                block title
                small
                  block hint
            .col-md-6
              h3.page-title
                block title_left
              //
                 END PAGE TITLE & BREADCRUMB
            .col-md-12
              block breadcrumb
          //
             END PAGE HEADER
          //
             BEGIN PAGE CONTENT
          block page_content
        //
           END PAGE CONTENT
      //
         BEGIN CONTENT 
