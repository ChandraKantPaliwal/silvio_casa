    //
       END GLOBAL MANDATORY STYLES 
    //
       BEGIN THEME STYLES 
    link(href='/assets/plugins/select2/select2.css', rel='stylesheet', type='text/css')
    link(href='/assets/plugins/select2/select2-metronic.css', rel='stylesheet', type='text/css')
