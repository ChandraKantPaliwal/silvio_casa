extends layout

block title_top
  | Silvio Casa

block meta_tags
  meta(content='', name='description')
  meta(content='', name='author')

block title
  | Welcome to #{title}

block hint
  | Hint

block title_left
  | YOYO

block breadcrumb
  ul.page-breadcrumb.breadcrumb
    li
      i.fa.fa-home
    li
      a(href="item")
        | Item
      i.fa.fa-angle-right
    li
      a(href="item")
        | New
      i.fa.fa-angle-right

block page_content
  .portlet.box.blue
    .portlet-title
      .caption
        i.fa.fa-globe
        | Show/Hide Columns
      .actions
        .btn-group
          a.btn.default(href="#", data-toggle="dropdown")
            | Columns
            i.fa.fa-angle-down
          #sample_2_column_toggler.dropdown-menu.hold-on-click.dropdown-checkboxes.pull-right
            label
              input(type="checkbox", checked="", data-column="0")
              | ID
            label
              input(type="checkbox", checked="", data-column="1")
              | Item Name
            label
              input(type="checkbox", checked="", data-column="2")
              | Item Code
            label
              input(type="checkbox", checked="", data-column="3")
              | Item Type
            label
              input(type="checkbox", checked="", data-column="4")
              | Weight
            label
              input(type="checkbox", checked="", data-column="5")
              | Quantity
            label
              input(type="checkbox", checked="", data-column="6")
              | Macking Charges
            label
              input(type="checkbox", checked="", data-column="7")
              | Fixed Price
    .portlet-body
      table#sample_2.table.table-striped.table-bordered.table-hover.table-full-width
        thead
          tr
            th
              | ID
            th
              | Item Name
            th.hidden-xs
              | Item Code
            th.hidden-xs
              | Item Type
            th.hidden-xs
              | Weight
            th.hidden-xs
              | Quantity
            th.hidden-xs
              | Making Charges
            th.hidden-xs
              | Fixed Price
        tbody
        - each item in items
          tr
            td
              | #{item.id}
            td
              | #{item.name}
            td
              | #{item.code}
            td
              | #{item.item_type_name}
            td
              | #{item.weight}
            td
              | #{item.quantity}
            td
              | #{item.making_charges}
            td
              | #{item.fixed_price}